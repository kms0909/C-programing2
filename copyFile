#include <stdio.h>
#include <stdlib.h>

void copyFile(const char* srcPath, const char* destPath) {
    FILE* srcFile, * destFile;
    char ch;

    // 소스 파일 열기
    srcFile = fopen(srcPath, "r");
    if (srcFile == NULL) {
        perror("소스 파일 열기 실패");
        return;
    }

    // 대상 파일 열기 (쓰기 모드로 열림)
    destFile = fopen(destPath, "w");
    if (destFile == NULL) {
        perror("대상 파일 열기 실패");
        fclose(srcFile);
        return;
    }

    // 파일 내용 복사
    while ((ch = fgetc(srcFile)) != EOF) {
        fputc(ch, destFile);
    }

    // 파일 닫기
    fclose(srcFile);
    fclose(destFile);

    printf("파일 복사 완료\n");
}

int main() {
    const char* srcPath = "sj.txt";           // 복사하고싶은 파일 명
    const char* destPath = "sj2.txt";         // 복사된 파일 명 지정

    // 파일 복사 함수 호출
    copyFile(srcPath, destPath);

    return 0;
}
